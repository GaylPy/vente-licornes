{% extends "layout.html.twig" %}

{% block title %}Mon Compte{% endblock %}

{% block content %}
    <div class="container col-md-8 col-md-offset-2">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs nav-justified" role="tablist">
            <li role="presentation" class="active"><a href="#account" aria-controls="account" role="tab"
                                                      data-toggle="tab"><span class="glyphicon glyphicon-user"></span>
                    Compte</a></li>
            <li role="presentation"><a href="#delivery" aria-controls="delivery" role="tab" data-toggle="tab"><span
                            class="glyphicon glyphicon-send"></span> Adresses
                    de livraison</a></li>
            <li role="presentation"><a href="#fidelity" aria-controls="fidelite" role="tab" data-toggle="tab"><span
                            class="glyphicon glyphicon-star"></span> Fidélité</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane fade in active" id="account">
                <h4>Mon Compte</h4>
                <form id="formAccount" class="form-horizontal" role="form" action="#" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Prénom</label>
                        <div class="col-sm-10">
                            <input id="firstname" name="firstname" type="text" placeholder="Prénom" class="form-control"
                                   value="{{ app.session.get('user').prenom }}" required readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Nom</label>
                        <div class="col-sm-10">
                            <input id="name" name="name" type="text" placeholder="Nom" class="form-control"
                                   value="{{ app.session.get('user').nom }}" required readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Email</label>
                        <div class="col-sm-10">
                            <input id="email" name="email" type="email" placeholder="Email" class="form-control"
                                   value="{{ app.session.get('user').email }}" required readonly>
                        </div>
                    </div>
                    <div id="fgLastPwd" class="form-group" hidden>
                        <label class="col-sm-2 control-label" for="textinput">Vérification</label>
                        <div class="col-sm-10">
                            <input id="lastPassword" name="lastPassword" type="password"
                                   placeholder="Mot de passe actuel" class="form-control" required readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Mot de passe</label>
                        <div class="col-sm-10">
                            <input id="newPassword" name="newPassword" type="password"
                                   placeholder="Nouveau mot de passe" class="form-control" value="XXXXXXXXXXXXXXX"
                                   readonly>
                        </div>
                    </div>
                    <div id="fgCheckPwd" class="form-group" hidden>
                        <label class="col-sm-2 control-label" for="textinput">Confimation</label>
                        <div class="col-sm-10">
                            <input id="checkPwd" name="checkPwd" type="password"
                                   placeholder="Confirmation du nouveau mot de passe" class="form-control">
                        </div>
                    </div>

                    <div id="saveAccount" class="form-group" hidden>
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="pull-right">
                                <button type="button" onclick="changeAccount('Account')" class="btn btn-default">
                                    Annuler
                                </button>
                                <button type="submit" onclick="changeAccount('Account')" class="btn btn-warning">
                                    Enregistrer
                                </button>
                            </div>
                        </div>
                    </div>
                    <div id="updateAccount" class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="pull-right">
                                <button type="button" onclick="changeAccount('Account')"
                                        class="btn btn-primary">
                                    Modifier
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div role="tabpanel" class="tab-pane fade" id="delivery">
                <h4>Mon adresse</h4>
                <form id="formDelivery" class="form-horizontal" role="form">
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Ville</label>
                        <div class="col-sm-10">
                            <input id="city" name="city" type="text" placeholder="Ville" class="form-control" readonly>
                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="textinput">Pays</label>
                        <div class="col-sm-10">
                            <input id="country" name="country" type="text" placeholder="Pays" class="form-control" readonly>
                        </div>
                    </div>

                    <div id="saveDelivery" class="form-group" hidden>
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="pull-right">
                                <button type="button" onclick="changeAccount('Delivery')" class="btn btn-default">
                                    Annuler
                                </button>
                                <button type="submit" class="btn btn-warning">
                                    Enregistrer
                                </button>
                            </div>
                        </div>
                    </div>
                    <div id="updateDelivery" class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="pull-right">
                                <button type="button" onclick="changeAccount('Delivery')" class="btn btn-primary">
                                    Modifier
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div role="tabpanel" class="tab-pane fade" id="fidelity">
                <h4>Ma fidélité</h4>
                <p>Vous nous êtes fidèle depuis le <b>01/01/1900</b></p>
                <p>Votre compte est actuellement crédité de <b>57</b> sabots</p>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script src="{{ app.request.basepath }}/js/account.js"></script>
{% endblock %}